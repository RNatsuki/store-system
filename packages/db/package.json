    "@store-system/types": "workspace:*",
    "better-sqlite3": "^12.6.2"
  },
  "devDependencies": {
    "@store-system/tsconfig": "workspace:*",
    "@types/better-sqlite3": "^7.6.13",
    "@types/node": "^25.1.0",
    "prisma": "^7.3.0",
    "typescript": "^5.7.3"
