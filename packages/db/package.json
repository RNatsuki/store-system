{
  "name": "@store-system/db",
  "prisma": {
    "schema": "./prisma/schema.prisma"
  },
  "version": "1.0.0",
  "description": "Database client and schemas for the store system",
  "main": "./dist/index.ts",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
